extends layout_in

block content
  .container


  div(class="row")
    div(class="col-lg-12")
      //h1(class="page-header") #{params.obj.info.name}
      div(class="row")
        div(class="col-lg-12")
          div(class="panel panel-default")
            div(class="panel-heading") Crear #{params.obj.info.name}
            div(class="panel-body")
              form(role="form" method="post" action="#")

                each val, index in params.obj.fields
                  div(class="form-group")
                    label(for="#{index}") #{val.name} 
                      if(val.mandatory) 
                        sub *

                    case val.type
                      when 'longtext'
                        textarea(id="#{index}", name="#{index}", class="form-control")
                      when 'date'
                        input(type="text",id="#{index}", name="#{index}", class="form-control" )
                        script(type="text/javascript").
                          $(function () {
                            $('#'+index).datetimepicker();
                          });
                      default
                        input(type="text",id="#{index}", name="#{index}",class="form-control")

                 button(type="submit",class="btn btn-default") Submit

block header
  .container